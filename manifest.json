{
  "manifest_version": 2,
  "name": "FIDO2 Signature Injector",
  "version": "1.0.4",
  "description": "Digitally sign a canvas with a security key (WebAuthn) and inject a verification QR Code.",
  
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage", 
    "<all_urls>"
  ],

  "browser_specific_settings": {
    "gecko": {
      "id": "fido2-signature@ve2tmq.local",
      "strict_min_version": "142.0",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  },

  "background": {
    "scripts": ["background.js"]
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "lib/signature_pad.js",
        "lib/qrcode.min.js",
        "content.js"
      ]
    }
  ],

  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },

  "browser_action": {
    "default_title": "Sign with FIDO2",
    "default_icon": "icon.png"
  },
  
  "web_accessible_resources": [
    "injected_fido.js"
  ]
}
