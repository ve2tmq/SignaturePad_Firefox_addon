{
  "manifest_version": 2,
  "name": "FIDO2 Signature Injector",
  "version": "2.0",
  "description": "Signe numériquement un canvas avec une clé de sécurité (WebAuthn) et injecte un QR Code.",
  
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage", 
    "<all_urls>"
    // "nativeMessaging" est SUPPRIMÉ. Bon débarras !
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "lib/signature_pad.js",
        "lib/qrcode.min.js",
        "content.js"
      ]
    }
  ],

  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },

  "browser_action": {
    "default_title": "Signer avec FIDO2",
    "default_icon": "icon.png"
    // Plus besoin de popup.html pour demander le mot de passe !
  }
}
